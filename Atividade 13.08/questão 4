import java.util.Scanner;

public class questão4 {
    public static void main(String[] args){
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Qual a medida do 1° lado?");
        float lado1 = scanner.nextFloat();
        System.out.println("Qual a medida do 2° lado?");
        float lado2 = scanner.nextFloat();
        System.out.println("Qual a medida do 3° lado?");
        float lado3 = scanner.nextFloat();
        System.out.println("Qual a medida do 4° lado?");
        float lado4 = scanner.nextFloat();

        float perimetro = lado1 + lado2 + lado3 + lado4;

        System.out.println("O perimetro do seu quadrado é: " + perimetro);
        
        scanner.close();

    }
}
